<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/searchItemImage"
        android:layout_width="@dimen/item_list_image_icon_size"
        android:layout_height="@dimen/item_list_image_icon_size"
        android:contentDescription="@string/null_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smallMargin"
        android:layout_marginRight="@dimen/smallMargin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/headerTextColor"
        android:textSize="@dimen/smallTextSize"
        app:layout_constraintLeft_toRightOf="@id/searchItemImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/dummy_header_text" />

    <TextView
        android:id="@+id/searchItemSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smallMargin"
        android:layout_marginRight="@dimen/smallMargin"
        android:textColor="@color/headerTextColor"
        android:textSize="@dimen/smallTextSize"
        app:layout_constraintLeft_toRightOf="@id/searchItemImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchItemTitle"
        tools:text="@string/dummy_header_text" />


</androidx.constraintlayout.widget.ConstraintLayout>